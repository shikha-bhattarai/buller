<ul>
  <% for message in @post.errors.full_messages %>
    <li><%= message %></li>
  <% end %>
</ul>
<%= form_for :post, url: posts_path do |f| %>
<h2>New Student</h2>
<%= form_for :post do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :nickname %><br>
    <%= f.text_area :nickname %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>

  <p>
    <%= f.label :imageurl %><br>
    <%= f.text_area :imageurl %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_area :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.text_area :password_confirmation %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>
<% end %>
